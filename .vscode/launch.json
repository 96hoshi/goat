{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "GeoAPI Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": [
          "dev",
          "src/geoapi/main.py",
          "--reload",
          "--port",
          "8080"
      ],
      "consoleName": "GeoAPI Debug Console",
      "cwd": "${workspaceFolder}/apps/geoapi",
      "justMyCode": false,
      "jinja": true,
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "uv-sync"
    },
    {
      "name": "Routing Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": [
          "dev",
          "src/routing/main.py",
          "--reload",
          "--port",
          "8080"
      ],
      "consoleName": "Routing Debug Console",
      "cwd": "${workspaceFolder}/apps/routing",
      "justMyCode": false,
      "jinja": true,
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "uv-sync"
    },
    {
      "name": "Core Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": [
          "dev",
          "src/core/main.py",
          "--reload",
          "--port",
          "5000"
      ],
      "consoleName": "Core Debug Console",
      "cwd": "${workspaceFolder}/apps/core",
      "justMyCode": false,
      "jinja": true,
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "uv-sync"
    },
    {
      "name": "Web Debug",
      "type": "node-terminal",
      "request": "launch",
      "envFile": "${workspaceFolder}/.env",
      "command": "pnpm run web"
    },
  ],
  "compounds": [
    {
      "name": "Backend Debug",
      "configurations": [
        "GeoAPI Debug",
        "Core Debug",
      ]
    },
    {
      "name": "Launch App",
      "configurations": [
        "GeoAPI Debug",
        "Core Debug",
        "Web Debug"
      ]
    }
  ]
}
