{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "GeoAPI Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": [
          "dev",
          "src/geoapi/main.py",
          "--reload",
          "--port",
          "8080"
      ],
      "cwd": "${workspaceFolder}/apps/geoapi",
      "justMyCode": false,
      "jinja": true,
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "uv-sync"
    },
    {
      "name": "Routing Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": [
          "dev",
          "src/routing/main.py",
          "--reload",
          "--port",
          "8080"
      ],
      "cwd": "${workspaceFolder}/apps/routing",
      "justMyCode": false,
      "jinja": true,
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "uv-sync"
    },
    {
      "name": "Core Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": [
          "dev",
          "src/core/main.py",
          "--reload",
          "--port",
          "5000"
      ],
      "cwd": "${workspaceFolder}/apps/core",
      "justMyCode": false,
      "jinja": true,
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "uv-sync"
    },
    {
      "name": "Web Debug (Server-Side)",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run web"
    },
    {
      "name": "Web Debug (Client)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Web Debug (Full Stack)",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run web",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Storybook Debug",
      "type": "node-terminal",
      "request": "launch",
      "command": "cd apps/storybook && pnpm run storybook",
      "internalConsoleOptions": "openOnFirstSessionStart",
      "serverReadyAction": {
        "pattern": "Local:.+(https?://[^:]+:[0-9]+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
  ]
}
